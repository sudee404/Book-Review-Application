{
	"configurations": [
		{
			"name": "Docker: Python - Django",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"python": {
				"pathMappings": [
					{
						"localRoot": "${workspaceFolder}",
						"remoteRoot": "/app"
					}
				],
				"projectType": "django"
			}
		},
		{
			"name": "Docker Node.js Launch",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/frontend/package.json",
				"localRoot": "${workspaceFolder}/frontend"
			}
		}
	]
}
